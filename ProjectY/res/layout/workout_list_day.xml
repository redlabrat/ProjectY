<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textDayName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <CheckBox
        android:id="@+id/checkBoxFinished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/textDayName"
        android:clickable="false" />

    <TextView
        android:id="@+id/textDayExercises"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDayName"
        android:layout_toRightOf="@id/checkBoxFinished"
        android:layout_marginLeft="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>